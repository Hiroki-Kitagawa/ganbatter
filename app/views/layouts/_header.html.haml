%body
  %header.p-3.mb-3.header
    .container
      .d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
        %ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
          %li= link_to 'ホーム', root_path, class: 'nav-link link-dark px-2'
          %li= link_to '頑張り方', root_path, class: 'nav-link link-dark px-2'
          %li= link_to '目標を投稿してみる', new_article_path, class: 'nav-link link-dark px-2'
          %li= link_to '頑張ってみる', root_path, class: 'nav-link link-dark px-2'
          %li
            %p.nav-link.link-dark.px-2{"data-micromodal-trigger" => "modal-1"} モーダルを開く
        - if user_signed_in?
          .dropdown.text-end
            %a#dropdownUser1.d-block.link-dark.text-decoration-none.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", :href => "#"}
              = image_tag 'default-icon.png', alt: 'デフォルトアイコン', class: 'rounded-circle header-dropdown-icon'
            %ul.dropdown-menu.text-small{"aria-labelledby" => "dropdownUser1"}
              %li
                %a.dropdown-item{:href => "#"} 設定
              %li
                %a.dropdown-item{:href => "#"} プロフィール
              %li
                %hr.dropdown-divider/
              %li= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'dropdown-item'
        - else
          = link_to 'ログイン', user_session_path, data: { type: 'button', class: 'btn btn-primary' }
  #modal-1.modal.micromodal-slide{"aria-hidden" => "true"}
    .modal__overlay{"data-micromodal-close" => "", :tabindex => "-1"}
      .modal__container{"aria-labelledby" => "modal-1-title", "aria-modal" => "true", :role => "dialog"}
        %header.modal__header
          %h2#modal-1-title.modal__title 記事を投稿する
          %button.modal__close{"aria-label" => "Close modal", "data-micromodal-close" => ""}
        %main#modal-1-content.modal__content
          .form-signin
            .mb-3
              %label.form-label{:for => "exampleFormControlInput1"} タイトル
              %input#exampleFormControlInput1.form-control{:placeholder => "タイトル", :type => "text"}/
            .mb-3
              %label.form-label{:for => "exampleFormControlTextarea1"} 内容
              %textarea#exampleFormControlTextarea1.form-control{:rows => "12"}
  :javascript
    MicroModal.init();
