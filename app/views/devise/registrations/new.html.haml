.outer.container
  .row
    .devise-form
      %h1.h3.mb-3.fw-normal Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .form-item.name
          = f.label :name
          = f.text_field :name, placeholder: 'GAN BARU'
        .form-item.email
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'ganbaru@example.com'
        .form-item.password
          = f.label :password
          = f.password_field :password, autocomplete: "new-password", class: ''
        .form-item
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "new-password", class: ''
        .actions.w-100.btn.btn-lg.btn-primary
          = f.submit "Sign up"
      = render "devise/shared/links"
