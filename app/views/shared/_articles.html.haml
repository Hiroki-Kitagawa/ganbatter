- if @article
  - @articles.each do |article|
    %li.card.mb-3.is-active
      = link_to article_path(article) do
        .card-body
          %h3.card-title= article.title.truncate(20)
          %p.card-text= article.content.truncate(40)
        .card-footer
          .card-footer-left
            %p= user_name(article)
            = image_tag 'default-icon.png', alt: 'デフォルトアバター画像', class: 'avatar'
