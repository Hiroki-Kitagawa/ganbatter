<main class="articles">
  <div class="outer container">
    <div class="row">
      <ul class="home-left col-4">
        <%= render 'shared/articles' %>
      </ul>
      <div class="home-right col-8">
        <%= render 'shared/article' %>
        <%= render 'shared/comment' %>
        <div class="btn-secondary show-comment-form">応援コメントする</div>
        <% if user_signed_in? %>
          <%= form_with(model: @comment, url: article_comments_path(@article.id), local: true) do |f| %>
            <% @comment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            <div class="form-signin">
              <div class="mb-3">
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= f.label :content %>
                <%= f.text_field :content, class: 'form-control' %>
              </div>
              <%= f.submit '送信', class: "btn btn-primary" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</main>
